include ./mixins/mixin_header.pug
include ./mixins/mixin_user.pug
include ./mixins/mixin_sub.pug



doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
        title Questions - #{title}

        link(rel='stylesheet', href='/font-awesome-4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet', href='/css/lib/bootstrap/custom-bootstrap.css')
        link(rel='stylesheet', href='/css/lib/bootstrap/bootstrap-social-5.1.1.min.css')
        link(rel='stylesheet', href='/css/style.css')
        link(rel='stylesheet', href='/css/lib/jquery.atwho.css')


    body(style="margin-top: 70px")
        //- Loads the header from another file
        +header(user)

    
    h1(class="text-center") Subscriptions
    
    div(class="container list-group" id="subscriptions")
        form(action="/subscribe" method="post" class="list-group-item d-flex justify-content-between align-items-center")
            input(type='text' placeholder="new tag" name="sub" class="form-control mr-4")
            button(type="submit" class="btn btn-success text-light")
                i(class="fa fa-plus fa-2x") 
        each sub in user.subscriptions
            +sub(sub)
            
    
    
    block footer

        //- Load scripts in this order, else fail.
        script(src="/js/lib/jquery-3.2.1.min.js")
        script(src="/js/lib/popper-1.12.6.min.js")
        script(src="/js/lib/bootstrap-4.min.js")
        script(src="/js/lib/jquery.caret.min.js")
        script(src="/js/lib/jquery.atwho.min.js")
        script(src="/js/paste.js")

        //- Our js resources
        block scripts